# http://editorconfig.org/

root = true

[*]
indent_style = space
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[{node_modules}/**]
indent_style = ignore
tab_width = ignore
indent_size = ignore
charset = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore
